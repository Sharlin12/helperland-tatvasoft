@model helperland.Models.RegisterModel

@{
   ViewBag.Title = "Customer Registration";
   Layout = "~/Views/Shared/_Layout.cshtml";
  
}
 <div class="hero-image">
            <div class="hero-text">
                <form asp-action="SPregisteration" class="container rounded needs-validation">
                    <h1>Register Now!</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          <div class="form-group col">
                            <input  class="form-control" id="fname" placeholder="First Name" asp-for="FirstName" >
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                          </div>
                        <div class="form-group col" style="margin-top:-15px">
                            <input asp-for="LastName" class="form-control" placeholder="Last Name"/>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                          </div>
                          <div class="form-group col">
                            <input asp-for="Email" class="form-control" placeholder="E-mail address"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                          </div>
                            
                        <div class="col form-group " style="margin-top:-15px">
                                <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">+91</div>
                                  </div>
                                  <input type="tel" class="form-control" id="phone"  placeholder="Phone Number" asp-for="Mobile"
                                    >
                                </div>
                         <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="col from-group" style="margin-top:-15px">
                            <input asp-for="Password" class="form-control"  placeholder="Password"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                          </div>
                          <div class="col from-group">
                            <input asp-for="Confirmpwd" class="form-control"  placeholder="Confirm Password"/>
                            <span asp-validation-for="Confirmpwd" class="text-danger"></span>
                          </div>
                          <div class="col form-group align-items-left">
                              <input formcontrolname="Privacy policy" asp-for="privacyPolicy" type="checkbox" class="checkboxinput ng-untouched ng-pristine ng-valid" required>
                                <p class="i-accept">I accept <span>terms and conditions</span> & <span>privacy policy</span></p>
                           <span asp-validation-for="privacyPolicy" class="text-danger"></span>
                          </div>
                            
                        <div class="text-center">
                            <button type="submit" class="btn get-started" >
                                Get Started
                                <img src="~/assets/arrow-white.png">
                            </button>
                        </div>
                        
                        
                      
                
                    
                  </form>

                  <div class="scroll-down">
                    <a href="#" title="Scroll Down" class="scroll-1">
                        <img src="~/assets/group-18_5.png" alt="Scroll-down">
                    </a>
                </div>
              </div>
        </div>
        <div class="how-it-works">
            
                <h1 >How it works</h1>
                <div class="container ">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-lg-4 col-md-4 col-sm-6 " >
                            <h2>Register yourself</h2>
                            <h3>Provide your basic information to register
                                yourself as a service provider.</h3>
                                
                                    <button type="submit" class="btn" >
                                        Read more
                                        <img src="~/assets/shape-2.png">
                                    </button>
                               
                               
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-6 ">
                            <div class="myimg ml-auto">
                                <img src="~/assets/group-18_1.png">
                            </div>
                           
                        </div>
                        
                    </div>
                    
                </div>
                <div class="container ">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-lg-4 col-md-4 col-sm-6 ">
                            <div class="myimg mr-auto">
                                <img src="~/assets/group-18_6.png">
                            </div>
                           
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-6" >
                            <h2 class="for-mobile">Get service requests</h2>
                            <h3>You will get service requests from
                                customes depend on service area and profile.</h3>
                                
                                    <button type="submit" class="btn" >
                                        Read more
                                        <img src="~/assets/shape-2.png">
                                    </button>
                               
                               
                        </div>
                        
                        
                    </div>
                    
                </div>
                <div class="container ">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-lg-4 col-md-4 col-sm-6 " >
                            <h2 class="for-mobile1">Complete service</h2>
                            <h3>Accept service requests from your customers
                                and complete your work.</h3>
                                
                                    <button type="submit" class="btn" >
                                        Read more
                                        <img src="~/assets/shape-2.png">
                                    </button>
                               
                               
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-6 ">
                            <div class="myimg ml-auto">
                                <img src="~/assets/group-18_7.png">
                            </div>
                           
                        </div>
                        
                    </div>
                    
                </div>
            
        </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
