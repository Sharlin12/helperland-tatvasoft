      <div id="id01" class="modal">
  
        <form class="modal-content animate" asp-controller="Shared" asp-action="Login">
          
            <p class="login">Login to your account <i class="fa fa-close float-right" 
                onclick="document.getElementById('id01').style.display='none'"></i></p>
          <div class="container">
            @Html.ValidationMessage("Invalid",new { @class="text-danger"})
            <input  placeholder="Email" asp-for="LoginModel.Email">
               <span asp-validation-for="LoginModel.Email" class="text-danger"></span>
            
            <input  placeholder="Enter Password" asp-for="LoginModel.Password">
              <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
               <input id="#hiddenfield" asp-for="LoginModel.hiddenfield" type="hidden">
            
            <label>
              <input type="checkbox"  name="remember"> Remember me
            </label>
            <div class="text-center">
                <button type="submit" class="btn login-btn" >login</button>
            </div>
          </div>
      
          <div class="container text-center" style="margin-top: -40px;">
            <span> <a href="#" onclick="document.getElementById('id02').style.display='block';document.getElementById('id01').style.display='none'">Forgot Password?</a></span><br/>
            <span class="psw ">Don't have account? <a asp-controller="Home" asp-action="CustomerRegister">Create an account</a></span>
          </div>
        </form>
      </div>
    <div >
         <div id="id02" class="modal">
  
        <form class="modal-content animate" asp-controller="Shared" asp-action="checkEmailExist">
          
            <p class="login">Forgot password <i class="fa fa-close float-right" 
                onclick="document.getElementById('id02').style.display='none'"></i></p>
                
          <div class="container">
            @Html.ValidationMessage("Email1",new { @class="text-danger"})
            <input  placeholder="Email" asp-for="ForgotPasswordModel.Email1">
             <span asp-validation-for="ForgotPasswordModel.Email1" class="text-danger"></span>
            
              <br/>
            <div class="text-center" style="margin-top: 20px;">
                <button type="submit" class="btn login-btn" >Send</button>
            </div>
          </div>
      
          <div class="container text-center" style="margin-top: -40px;">
            <span> <a href="#" onclick="document.getElementById('id02').style.display='none';document.getElementById('id01').style.display='block'">Login Now</a></span><br/>
           
          </div>
        </form>
      </div>

      <div id="id03" class="modal">
  
        <form class="modal-content animate" >
          
            <p class="succesfull text-center">Successfully Updated</p>
                
          <div class="container text-center">
           <img src="~/assets/Sucess.jpg"  width="100px" height="100px"alt="Success">
            
          </div>
      
          
        </form>
      </div>
        <main role="main" >
            @RenderBody()
        </main>
